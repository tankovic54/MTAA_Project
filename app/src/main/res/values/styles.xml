<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#FF202020</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlActivated">@color/teal_700</item>
        <item name="android:textColorSecondary">@color/teal_200</item>
    </style>


</resources>